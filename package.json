{
  "name": "vscode-docsearch",
  "displayName": "DocSearch",
  "description": "An all-in-one VSCode extension for searching multiple documentation sources, without leaving your editor.",
  "version": "0.2.6",
  "icon": "icon.png",
  "author": {
    "name": "Bruno Paz",
    "email": "oss@brunopaz.dev",
    "url": "https://brunopaz.dev"
  },
  "repository": {
    "url": "https://github.com/brpaz/vscode-docsearch",
    "type": "git"
  },
  "publisher": "brpaz",
  "engines": {
    "vscode": "^1.52.0",
    "node": ">=16"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "docsearch.search",
        "title": "DocSearch: Search Documentation"
      }
    ],
    "configuration": {
      "title": "DocSearch",
      "type": "object",
      "properties": {
        "docsearch.openInBrowser": {
          "type": "boolean",
          "description": "This setting is ignored until we have a way to open external sites directly inside a VSCode Webview",
          "default": false
        },
        "docsearch.defaultDocsets": {
          "type": "object",
          "title": "Default Docsets",
          "description": "Select the default docsets to enable for search",
          "properties": {
            "react": {
              "type": "boolean",
              "default": true,
              "description": "React"
            },
            "vue": {
              "type": "boolean",
              "default": true,
              "description": "VueJS"
            },
            "gitlab": {
              "type": "boolean",
              "default": true,
              "description": "GitLab"
            },
            "cypress": {
              "type": "boolean",
              "default": true,
              "description": "Cypress"
            },
            "tailwindv2": {
              "type": "boolean",
              "default": true,
              "description": "Tailwind (V2)"
            },
            "tailwindv3": {
              "type": "boolean",
              "default": true,
              "description": "Tailwind (V3)"
            },
            "jest": {
              "type": "boolean",
              "default": true,
              "description": "Jest"
            },
            "nuxt": {
              "type": "boolean",
              "default": true,
              "description": "Nuxt"
            },
            "vuepress": {
              "type": "boolean",
              "default": true,
              "description": "Vuepress"
            },
            "gatsby": {
              "type": "boolean",
              "default": true,
              "description": "Gatbsy"
            },
            "typescript": {
              "type": "boolean",
              "default": true,
              "description": "Typescript"
            },
            "echo": {
              "type": "boolean",
              "default": true,
              "description": "Echo"
            },
            "gridsome": {
              "type": "boolean",
              "default": true,
              "description": "Gridsome"
            },
            "graphql": {
              "type": "boolean",
              "default": true,
              "description": "GraphQL"
            },
            "eslint": {
              "type": "boolean",
              "default": true,
              "description": "ESLint"
            },
            "scala": {
              "type": "boolean",
              "default": true,
              "description": "Scala"
            },
            "webpack": {
              "type": "boolean",
              "default": true,
              "description": "Webpack"
            },
            "apollo": {
              "type": "boolean",
              "default": true,
              "description": "Apollo GraphQL"
            },
            "vuetify": {
              "type": "boolean",
              "default": true,
              "description": "vuetify"
            },
            "vuex": {
              "type": "boolean",
              "default": true,
              "description": "Vuex"
            },
            "vue-router": {
              "type": "boolean",
              "default": true,
              "description": "Vue Router"
            },
            "parcel": {
              "type": "boolean",
              "default": true,
              "description": "Parcel"
            },
            "laravel": {
              "type": "boolean",
              "default": true,
              "description": "Laravel"
            },
            "nestjs": {
              "type": "boolean",
              "default": true,
              "description": "NestJS"
            },
            "bootstrap": {
              "type": "boolean",
              "default": true,
              "description": "Bootstrap"
            },
            "netlify": {
              "type": "boolean",
              "default": true,
              "description": "Netlify"
            },
            "babel": {
              "type": "boolean",
              "default": true,
              "description": "Babel"
            },
            "gorm": {
              "type": "boolean",
              "default": true,
              "description": "Gorm"
            },
            "grafana": {
              "type": "boolean",
              "default": true,
              "description": "Grafana"
            },
            "prometheus": {
              "type": "boolean",
              "default": true,
              "description": "Prometheus"
            },
            "prettier": {
              "type": "boolean",
              "default": true,
              "description": "Prettier"
            },
            "prisma": {
              "type": "boolean",
              "default": true,
              "description": "Prisma"
            },
            "strapi": {
              "type": "boolean",
              "default": true,
              "description": "Strapi"
            },
            "helm": {
              "type": "boolean",
              "default": true,
              "description": "Helm"
            },
            "directus": {
              "type": "boolean",
              "default": true,
              "description": "Directus"
            },
            "flux": {
              "type": "boolean",
              "default": true,
              "description": "FluxCD"
            },
            "astro": {
              "type": "boolean",
              "default": true,
              "description": "Astro"
            },
            "vercel": {
              "type": "boolean",
              "default": true,
              "description": "Vercel"
            },
            "supabase": {
              "type": "boolean",
              "default": true,
              "description": "Supabase"
            },
            "nuxt3": {
              "type": "boolean",
              "default": true,
              "description": "Nuxt3"
            },
            "vite": {
              "type": "boolean",
              "default": true,
              "description": "Vite"
            },
            "vitepress": {
              "type": "boolean",
              "default": true,
              "description": "VitePress"
            },
            "pinia": {
              "type": "boolean",
              "default": true,
              "description": "Pinia"
            },
            "cloudflare": {
              "type": "boolean",
              "default": true,
              "description": "Cloudflare"
            },
            "symfony": {
              "type": "boolean",
              "default": true,
              "description": "Symfony"
            },
            "terraform": {
              "type": "boolean",
              "default": true,
              "description": "Terraform"
            },
            "webdev": {
              "type": "boolean",
              "default": true,
              "description": "Web.dev"
            },
            "backstage": {
              "type": "boolean",
              "default": true,
              "description": "Backstage"
            },
            "nginx-ingress": {
              "type": "boolean",
              "default": true,
              "description": "Nginx Ingress Controller"
            },
            "argo-cd": {
              "type": "boolean",
              "default": true,
              "description": "ArgoCD"
            },
            "postgres": {
              "type": "boolean",
              "default": true,
              "description": "PostgreSQL"
            },
            "trpc": {
              "type": "boolean",
              "default": true,
              "description": "TRPC"
            },
            "nextJS": {
              "type": "boolean",
              "default": true,
              "description": "NextJS"
            }
          }
        },
        "docsearch.userDocsets": {
          "description": "List of Extra docsets to be added to the search",
          "type": "array",
          "items": {
            "type": "object",
            "required": [
              "id",
              "enabled",
              "name",
              "description",
              "provider",
              "siteUrl",
              "searchConfig"
            ],
            "properties": {
              "id": {
                "type": "string",
                "description": "Unique identifier of the docset"
              },
              "enabled": {
                "type": "boolean",
                "description": "If disabled, the docset will not be available for search",
                "default": true
              },
              "name": {
                "type": "string",
                "description": "Name of the docset"
              },
              "description": {
                "type": "string",
                "description": "Description of the docset"
              },
              "provider": {
                "type": "string",
                "description": "The provider of the Docset.",
                "enum": [
                  "mkdocs",
                  "algolia",
                  "devdocs"
                ]
              },
              "siteUrl": {
                "type": "string",
                "description": "The URL of the documentation site"
              },
              "searchConfig": {
                "type": "object",
                "anyOf": [
                  {
                    "properties": {
                      "baseUrl": {
                        "type": "string"
                      }
                    },
                    "required": [
                      "baseUrl"
                    ],
                    "if": {
                      "properties": {
                        "provider": {
                          "const": "mkdocs"
                        }
                      }
                    }
                  },
                  {
                    "properties": {
                      "slug": {
                        "type": "string"
                      }
                    },
                    "required": [
                      "slug"
                    ],
                    "if": {
                      "properties": {
                        "provider": {
                          "const": "devdocs"
                        }
                      }
                    }
                  },
                  {
                    "properties": {
                      "appId": {
                        "type": "string",
                        "description": "Algolia Application ID"
                      },
                      "apiKey": {
                        "type": "string",
                        "description": "Algolia API Key"
                      },
                      "indexName": {
                        "type": "string",
                        "description": "Algolia Index Name"
                      },
                      "facets": {
                        "type": "object",
                        "description": "Custom search Facets to use on Aloglia request"
                      }
                    },
                    "required": [
                      "appId",
                      "apiKey",
                      "indexName"
                    ],
                    "if": {
                      "properties": {
                        "provider": {
                          "const": "algolia"
                        }
                      }
                    }
                  }
                ]
              }
            }
          }
        }
      }
    }
  },
  "scripts": {
    "prepare": "husky install",
    "compile": "tsc -p ./",
    "lint": "eslint src --ext ts",
    "lint:fix": "eslint src --ext ts --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier check \"src/**/*.ts\"",
    "watch": "tsc -watch -p ./",
    "test": "jest",
    "test:report:jest": "serve ./reports/jest",
    "test:report:coverage": "serve ./reports/coverage/lcov-report",
    "package": "rimraf dist && mkdir -p dist && vsce package -o dist/",
    "vsce:publish": "vsce publish -i dist/*.vsix",
    "docs:check": "npx ts-node src/scripts/checkDocs.ts"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.4.2",
    "@commitlint/config-conventional": "^17.6.3",
    "@types/glob": "^8.0.1",
    "@types/jest": "^29.4.0",
    "@types/node": "^16.18.11",
    "@types/node-fetch": "^2.6.2",
    "@types/node-fetch-cache": "^3.0.0",
    "@types/tmp": "^0.2.3",
    "@types/vscode": "^1.52.0",
    "@typescript-eslint/eslint-plugin": "^5.48.1",
    "@typescript-eslint/parser": "^5.48.1",
    "add": "^2.0.6",
    "chalk": "^4.1.2",
    "eslint": "^8.34.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-plugin-prettier": "^4.2.1",
    "glob": "^8.1.0",
    "husky": "^8.0.3",
    "jest": "^29.4.2",
    "jest-html-reporter": "^3.7.0",
    "jest-junit": "^15.0.0",
    "lint-staged": "^13.1.0",
    "nock": "^13.3.0",
    "prettier": "^2.8.3",
    "rimraf": "^4.1.2",
    "serve": "^14.2.0",
    "ts-jest": "^29.0.5",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.4",
    "vsce": "^2.15.0",
    "vscode-test": "^1.6.1"
  },
  "lint-staged": {
    "src/**/*.{ts}": [
      "eslint . --fix",
      "prettier --write"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "jest-junit": {
    "suiteNameTemplate": "{filepath}",
    "classNameTemplate": "{classname}",
    "titleTemplate": "{title}"
  },
  "dependencies": {
    "node-fetch": "2",
    "node-fetch-cache": "^3.0.5"
  }
}
