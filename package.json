{
  "name": "docsearch",
  "displayName": "DocSearch",
  "description": "Search on documentation sites powered by Algolia DocSearch and MkDocs, directly from VSCode ",
  "version": "1.0.0",
  "icon": "icon.png",
  "author": {
    "name": "Bruno Paz",
    "email": "oss@brunopaz.dev",
    "url": "https://brunopaz.dev"
  },
  "repository": {
    "url": "https://github.com/brpaz/vscode-docsearch",
    "type": "git"
  },
  "publisher": "brpaz",
  "engines": {
    "vscode": "^1.52.0",
    "node": ">=16"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:docsearch.search"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "docsearch.search",
        "title": "DocSearch: Search Documentation"
      }
    ],
    "configuration": {
      "title": "DocSearch",
      "type": "object",
      "properties": {
        "docsearch.openInBrowser": {
          "type": "boolean",
          "description": "This setting is ignored until we have a way to open external sites directly inside a VSCode Webview",
          "default": false
        },
        "docsearch.docsets": {
          "description": "List of Documentation sites to search",
          "type": "array",
          "items": {
            "type": "object",
            "required": [
              "id",
              "enabled",
              "name",
              "description",
              "provider",
              "siteUrl"
            ],
            "properties": {
              "id": {
                "type": "string",
                "description": "Unique identifier of the docset"
              },
              "enabled": {
                "type": "boolean",
                "description": "If disabled, the docset will not be available for search",
                "default": true
              },
              "name": {
                "type": "string",
                "description": "Name of the docset"
              },
              "description": {
                "type": "string",
                "description": "Description of the docset"
              },
              "provider": {
                "type": "string",
                "description": "The provider of the Docset.",
                "enum": [
                  "mkdocs",
                  "algolia"
                ]
              },
              "siteUrl": {
                "type": "string",
                "description": "The URL of the documentation site"
              },
              "searchConfigs": {
                "type": "object",
                "anyOf": [
                  {
                    "properties": {
                      "baseUrl": {
                        "type": "string"
                      }
                    },
                    "required": [
                      "baseUrl"
                    ],
                    "if": {
                      "properties": {
                        "provider": {
                          "const": "mkdocs"
                        }
                      }
                    }
                  },
                  {
                    "properties": {
                      "appId": {
                        "type": "string",
                        "description": "Algolia Application ID"
                      },
                      "apiKey": {
                        "type": "string",
                        "description": "Algolia API Key"
                      },
                      "indexName": {
                        "type": "string",
                        "description": "Algolia Index Name"
                      },
                      "facets": {
                        "type": "object",
                        "description": "Custom search Facets to use on Aloglia request"
                      }
                    },
                    "required": [
                      "appId",
                      "apiKey",
                      "indexName"
                    ],
                    "if": {
                      "properties": {
                        "provider": {
                          "const": "algolia"
                        }
                      }
                    }
                  }
                ]
              }
            }
          }
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "yarn run compile",
    "compile": "tsc -p ./",
    "lint": "eslint src --ext ts",
    "lint:fix": "eslint src --ext ts --fix",
    "watch": "tsc -watch -p ./",
    "test": "jest",
    "report:jest": "serve ./reports/jest",
    "report:coverage": "serve ./reports/coverage/lcov-report",
    "package": "mkdir -p dist && vsce package -o dist/",
    "release": "vsce publish -i dist/*.vsix",
    "prepare": "husky install",
    "validate-docs": "npx ts-node src/scripts/checkBrokenDocs.ts"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.4.2",
    "@commitlint/config-conventional": "^17.4.2",
    "@types/glob": "^8.0.0",
    "@types/jest": "^29.4.0",
    "@types/node": "^16.18.11",
    "@types/node-fetch": "^2.6.2",
    "@types/vscode": "^1.52.0",
    "@typescript-eslint/eslint-plugin": "^5.48.1",
    "@typescript-eslint/parser": "^5.48.1",
    "add": "^2.0.6",
    "chalk": "^4.1.2",
    "eslint": "^8.32.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-plugin-prettier": "^4.2.1",
    "glob": "^8.1.0",
    "husky": "^8.0.3",
    "jest": "^29.4.1",
    "jest-html-reporter": "^3.7.0",
    "jest-junit": "^15.0.0",
    "lint-staged": "^13.1.0",
    "nock": "^13.3.0",
    "prettier": "^2.8.3",
    "serve": "^14.2.0",
    "ts-jest": "^29.0.5",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.4",
    "vsce": "^2.15.0",
    "vscode-test": "^1.6.1"
  },
  "lint-staged": {
    "src/**/*.{ts}": [
      "eslint . --fix"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "jest-junit": {
    "suiteNameTemplate": "{filepath}",
    "classNameTemplate": "{classname}",
    "titleTemplate": "{title}"
  },
  "dependencies": {
    "node-fetch": "2"
  }
}